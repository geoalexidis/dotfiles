[rebase]
	autosquash = true
	autostash = true

[core]
  pager = delta

[interactive]
  diffFilter = delta --color-only

[delta]
  navigate = true  # use n and N to move between diff sections
  side-by-side = true
  line-numbers = true

[merge]
  conflictstyle = diff3
  tool = fugitive

[diff]
  colorMoved = default
[mergetool "fugitive"]
	cmd = lv -f -c \"Gdiff\" \"$MERGED\"
[push]
	followTags = true
[init]
  defaultBranch = main

